{
  "metadata": {
    "name": "c1-gateway",
    "labels": {
      "cloud": "c1",
      "component": "gateway",
      "arrowhead": "true",
      "updated": "2025-11-09"
    }
  },
  "kind": "DockerDeployment",
  "spec": {
    "replicas": 1,
    "instances": [
      {
        "name": "c1-gateway",
        "type": "container",
        "image": "aitiaiiot/arrowhead-system:4.6.1",
        "environment": {
          "SYSTEM_NAME": "gateway",
          "TZ": "Europe/Amsterdam",
          "PASSWORD": "123456"
        },
        "ports": [
          {
            "host": 8453,
            "container": 8453,
            "protocol": "tcp"
          }
        ],
        "volumes": [
          {
            "type": "bind",
            "hostPath": "/home/johan/dev/github/eislab-cps/arrowhead-core-docker/c1-props/gateway/application.properties",
            "mountPath": "/opt/arrowhead/application.properties",
            "readOnly": true
          },
          {
            "type": "bind",
            "hostPath": "/home/johan/dev/github/eislab-cps/arrowhead-core-docker/c1/gateway/certificates",
            "mountPath": "/opt/arrowhead/certificates",
            "readOnly": true
          },
          {
            "type": "bind",
            "hostPath": "/home/johan/dev/github/eislab-cps/arrowhead-core-docker/config/gateway/log4j2.xml",
            "mountPath": "/opt/arrowhead/log4j2.xml",
            "readOnly": true
          },
          {
            "type": "bind",
            "hostPath": "/home/johan/dev/github/eislab-cps/arrowhead-core-docker/config/gateway/run.sh",
            "mountPath": "/opt/arrowhead/run.sh",
            "readOnly": true
          }
        ]
      }
    ]
  }
}
